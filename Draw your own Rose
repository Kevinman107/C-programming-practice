#include<iostream>
using namespace std;
int main() {
    int n;
    cout << "Please input the size of the matrix: " << endl;
    cin >> n;
    int matrix[100][100];
    cout << "Please input the matrix row by row: " << endl;
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            cin >> matrix[i][j];
        }
    }
 
    int startCol = 0;
    int endCol = n;
    int startRow = 0;
    int endRow = n;
    int sum = n * n;
    int count = 0;
    cout << "The spiral form of the matrix is: " << endl;
    while (startCol < endCol && startRow < endRow) {                    //To check is it within the range
        if (count == sum) {                                             //To check is the program loop all the elements
            break;
        }
        for (int i = startRow; i < endRow; i++) {                       //Get the number of the colume
            cout << matrix[i][startCol] << " ";                         //cout the elements of the colume each time
            count++;
        }
        startCol++;
 
        if (count == sum) {                                            //To check is the program loop all the elements
            break;
        }
 
        for (int i = startCol; i < endCol; i++) {                      //cout the rows from the last row
            cout << matrix[endRow - 1][i] << " ";
            count++;
        }
        endRow--;
 
        if (count == sum) {                                             //To check is the program loop all the elements
            break;
        }
 
        if (startRow < endRow) {                                       //cout the colume from the last colume
            for (int i = endRow - 1; i >= startRow; i--) {
                cout << matrix[i][endCol - 1] << " ";
                count++;
            }
            endCol--;
        }
 
        if (count == sum) {
            break;
        }
 
        if (startCol < endCol) {                                        //cout the row from the first row
            for (int i = endCol - 1; i >= startCol; i--) {
                cout << matrix[startRow][i] << " ";
                count++;
            }
            startRow++;
        }
 
    }
 
 
 
 
    return 0;
}
